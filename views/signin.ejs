<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Sign In</title>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
        <style>
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            body {
                font-family: 'Inter', sans-serif;
                min-height: 100vh;
                background: linear-gradient(135deg, #1a0a2e 0%, #16213e 25%, #0f3460 50%, #533a7d 75%, #7209b7 100%);
                position: relative;
                overflow-x: hidden;
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                padding: 20px;
            }

            body::before {
                content: '';
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: 
                    radial-gradient(circle at 20% 80%, rgba(120, 9, 183, 0.3) 0%, transparent 50%),
                    radial-gradient(circle at 80% 20%, rgba(147, 51, 234, 0.3) 0%, transparent 50%),
                    radial-gradient(circle at 40% 40%, rgba(168, 85, 247, 0.2) 0%, transparent 50%);
                pointer-events: none;
                z-index: 0;
            }

            .floating-particles {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                pointer-events: none;
                z-index: 1;
            }

            .particle {
                position: absolute;
                width: 4px;
                height: 4px;
                background: rgba(168, 85, 247, 0.6);
                border-radius: 50%;
                animation: float 20s infinite linear;
            }

            .particle:nth-child(odd) {
                background: rgba(147, 51, 234, 0.4);
                animation-duration: 25s;
            }

            .particle:nth-child(3n) {
                background: rgba(139, 92, 246, 0.5);
                animation-duration: 30s;
            }

            @keyframes float {
                0% {
                    transform: translateY(100vh) rotate(0deg);
                    opacity: 0;
                }
                10% {
                    opacity: 1;
                }
                90% {
                    opacity: 1;
                }
                100% {
                    transform: translateY(-100vh) rotate(360deg);
                    opacity: 0;
                }
            }

            .header {
                position: fixed;
                top: 40px;
                z-index: 1000;
                background: rgba(30, 41, 59, 0.8);
                backdrop-filter: blur(20px);
                border: 1px solid rgba(168, 85, 247, 0.3);
                border-radius: 20px;
                padding: 20px 40px;
                box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            }

            #typing-header {
                color: #e2e8f0;
                font-size: 1.8rem;
                font-weight: 600;
                text-shadow: 0 0 20px rgba(168, 85, 247, 0.5);
                letter-spacing: 2px;
            }

            .container {
                background: rgba(30, 41, 59, 0.9);
                backdrop-filter: blur(20px);
                border: 1px solid rgba(168, 85, 247, 0.3);
                border-radius: 24px;
                padding: 40px;
                width: 100%;
                max-width: 450px;
                box-shadow: 
                    0 20px 40px rgba(0, 0, 0, 0.4),
                    0 0 0 1px rgba(168, 85, 247, 0.1),
                    inset 0 1px 0 rgba(255, 255, 255, 0.1);
                z-index: 10;
                position: relative;
                margin-top: 100px;
                animation: slideUp 0.8s ease-out;
            }

            @keyframes slideUp {
                from {
                    opacity: 0;
                    transform: translateY(50px);
                }
                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }

            .signin_form {
                width: 100%;
            }

            .form_header {
                text-align: center;
                margin-bottom: 30px;
            }

            .form_header h1 {
                color: #f8fafc;
                font-size: 2.5rem;
                font-weight: 700;
                margin-bottom: 15px;
                background: linear-gradient(135deg, #a855f7, #ec4899);
                background-clip: text;
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                text-shadow: none;
            }

            .form_header p {
                background: linear-gradient(135deg, #7c3aed, #a855f7);
                color: white;
                padding: 12px 20px;
                border-radius: 12px;
                font-size: 0.9rem;
                font-weight: 500;
                border: 1px solid rgba(168, 85, 247, 0.3);
                box-shadow: 0 4px 12px rgba(124, 58, 237, 0.3);
                margin: 0;
            }

            .form_header a {
                color: #fbbf24;
                text-decoration: none;
                font-weight: 600;
                transition: color 0.3s ease;
            }

            .form_header a:hover {
                color: #f59e0b;
            }

            .form-group {
                margin-bottom: 20px;
            }

            label {
                display: block;
                color: #cbd5e1;
                font-size: 0.95rem;
                font-weight: 500;
                margin-bottom: 8px;
                letter-spacing: 0.5px;
            }

            input[type="email"],
            input[type="password"] {
                width: 100%;
                padding: 16px 20px;
                background: rgba(15, 23, 42, 0.8);
                border: 2px solid rgba(168, 85, 247, 0.3);
                border-radius: 12px;
                color: #f1f5f9;
                font-size: 1rem;
                transition: all 0.3s ease;
                backdrop-filter: blur(10px);
            }

            input[type="email"]:focus,
            input[type="password"]:focus {
                outline: none;
                border-color: #a855f7;
                box-shadow: 0 0 0 4px rgba(168, 85, 247, 0.2);
                background: rgba(15, 23, 42, 0.9);
            }

            input::placeholder {
                color: #64748b;
            }

            input[type="submit"] {
                width: 100%;
                padding: 18px;
                background: linear-gradient(135deg, #7c3aed, #a855f7, #ec4899);
                border: none;
                border-radius: 12px;
                color: white;
                font-size: 1.1rem;
                font-weight: 600;
                cursor: pointer;
                transition: all 0.3s ease;
                box-shadow: 0 8px 20px rgba(124, 58, 237, 0.4);
                margin-bottom: 20px;
                position: relative;
                overflow: hidden;
            }

            input[type="submit"]::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
                transition: left 0.5s ease;
            }

            input[type="submit"]:hover {
                transform: translateY(-2px);
                box-shadow: 0 12px 25px rgba(124, 58, 237, 0.5);
            }

            input[type="submit"]:hover::before {
                left: 100%;
            }

            input[type="submit"]:active {
                transform: translateY(0);
            }

            footer {
                position: fixed;
                bottom: 20px;
                left: 50%;
                transform: translateX(-50%);
                font-size: 0.85rem;
                color: #64748b;
                opacity: 0.9;
                font-family: 'Inter', sans-serif;
                text-align: center;
                z-index: 1000;
            }

            .container::before {
                content: '';
                position: absolute;
                top: -2px;
                left: -2px;
                right: -2px;
                bottom: -2px;
                background: linear-gradient(45deg, #7c3aed, #a855f7, #ec4899, #7c3aed);
                border-radius: 26px;
                z-index: -1;
                animation: rotate 4s linear infinite;
                opacity: 0.3;
            }

            @keyframes rotate {
                0% {
                    transform: rotate(0deg);
                }
                100% {
                    transform: rotate(360deg);
                }
            }

            @media (max-width: 768px) {
                .container {
                    margin: 20px;
                    padding: 30px 25px;
                    margin-top: 120px;
                }
                
                .header {
                    top: 20px;
                    padding: 15px 25px;
                }
                
                #typing-header {
                    font-size: 1.4rem;
                }
                
                .form_header h1 {
                    font-size: 2rem;
                }
            }
        </style>
    </head>
    <body>
        <div class="floating-particles"></div>
        
        <div class="header">
            <h1 id="typing-header"></h1>
        </div>
        
        <div class="container">
            <form method="POST" action="/signin/submit" class="signin_form">
                <div class="form_header">
                    <h1>Sign In</h1>
                    <p>
                        Don't have an account? <a href="/signup">SIGN UP</a>
                    </p>
                </div>
                
                <div class="form-group">
                    <label for="email">Email</label>
                    <input id="email" type="email" name="email" placeholder="Enter your email address">
                </div>
                
                <div class="form-group">
                    <label for="password">Password</label>
                    <input id="password" type="password" name="password" placeholder="Enter your password">
                </div>
    
                <input type="submit" value="Sign In">
                
            </form>         
        </div>
        
        <footer>© Quiz App made by Akash, Juno, and Mret</footer>

        <script>
            // Create floating particles
            function createParticles() {
                const particleContainer = document.querySelector('.floating-particles');
                
                for (let i = 0; i < 50; i++) {
                    const particle = document.createElement('div');
                    particle.className = 'particle';
                    particle.style.left = Math.random() * 100 + '%';
                    particle.style.animationDelay = Math.random() * 20 + 's';
                    particle.style.animationDuration = (Math.random() * 10 + 20) + 's';
                    particleContainer.appendChild(particle);
                }
            }

            // Typing effect for header
            function typeWriter(text, element, speed = 100) {
                let i = 0;
                function type() {
                    if (i < text.length) {
                        element.innerHTML += text.charAt(i);
                        i++;
                        setTimeout(type, speed);
                    }
                }
                type();
            }

            // Initialize when page loads
            document.addEventListener('DOMContentLoaded', function() {
                createParticles();
                const headerElement = document.getElementById('typing-header');
                if (headerElement) {
                    typeWriter('Welcome to Random-10 Quiz App', headerElement, 150);
                }
            });
        </script>
    </body>
</html>